<Page x:Class="RECOVER.Scenes.SceneView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:c="clr-namespace:RECOVER.Control"
      xmlns:conv="clr-namespace:RECOVER.Converter"
      xmlns:scenes="clr-namespace:RECOVER.Scenes"
      mc:Ignorable="d"
      x:Name="ThisPage"
      d:DataContext="{d:DesignInstance scenes:MainBaseScene, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <conv:NegativeDoubleConvert x:Key="NegativeDoubleConvert" />
        <conv:HalfValueConverter x:Key="HalfValueConverter" />
        <conv:NegateValueConverter x:Key="NegateValueConverter" />
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Width="{Binding ElementName=ThisPage, Path=ActualWidth}"
                Height="{Binding ElementName=ThisPage, Path=ActualHeight}">

            <Canvas.RenderTransform>
                <TransformGroup>
                    <TranslateTransform>
                        <TranslateTransform.X>
                            <MultiBinding Converter="{StaticResource NegativeDoubleConvert}" ConverterParameter="15">
                                <Binding Path="Player.Transform.Position.X" />
                                <Binding ElementName="ThisPage" Path="ActualWidth" />
                            </MultiBinding>
                        </TranslateTransform.X>
                        <TranslateTransform.Y>
                            <MultiBinding Converter="{StaticResource NegativeDoubleConvert}" ConverterParameter="15">
                                <Binding Path="Player.Transform.Position.Y" />
                                <Binding ElementName="ThisPage" Path="ActualHeight" />
                            </MultiBinding>
                        </TranslateTransform.Y>
                    </TranslateTransform>
                    <RotateTransform
                        CenterX="{Binding ElementName=ThisPage, Path=ActualWidth, Converter={StaticResource HalfValueConverter}}"
                        CenterY="{Binding ElementName=ThisPage, Path=ActualHeight, Converter={StaticResource HalfValueConverter}}"
                        Angle="{Binding Player.Transform.Rotation.Y, Converter={StaticResource NegateValueConverter}}" />
                </TransformGroup>
            </Canvas.RenderTransform>

            <Grid>
                <c:TileMap ItemSource="{Binding Map.CellsOfMap}" WidthOfCell="64" HeightOfCell="64" />
            </Grid>

            <Image Width="30" Height="30"
                   Source="{StaticResource PlayerMen}"
                   Canvas.Left="{Binding Player.Transform.Position.X}"
                   Canvas.Top="{Binding Player.Transform.Position.Y}">
                <Image.RenderTransform>
                    <RotateTransform CenterX="15" CenterY="15" Angle="{Binding Player.Transform.Rotation.Y}" />
                </Image.RenderTransform>
            </Image>

        </Canvas>

        <ListView Background="Black" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                  Grid.Row="1" ItemsSource="{Binding ItemActivator.SurroundingItems}"
                  BorderBrush="Black">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Canvas Height="32" Width="256">
                        <Image Source="{StaticResource ItemTarget}" />
                        <Label Canvas.Left="3" FontSize="18" Canvas.Top="0" Content="{Binding ActivationKey}" />
                        <Label Canvas.Left="25" FontSize="18" Canvas.Top="0" Content="{Binding Description}" />
                    </Canvas>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>