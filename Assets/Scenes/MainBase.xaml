<Page x:Class="RECOVER.Assets.Scenes.MainBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:RECOVER.Engine.WPFTools"
      xmlns:s="clr-namespace:RECOVER.Assets.Scenes"
      mc:Ignorable="d"
      x:Name="ThisPage"
      Background="Black"
      d:DataContext="{d:DesignInstance s:MainBaseScene, IsDesignTimeCreatable=True}">

    <conv:GameObjectCanvas Width="{Binding ElementName=ThisPage, Path=ActualWidth}"
                           Height="{Binding ElementName=ThisPage, Path=ActualHeight}"
                           Background="Black" ItemsSource="{Binding Objects}">
    </conv:GameObjectCanvas>
</Page>