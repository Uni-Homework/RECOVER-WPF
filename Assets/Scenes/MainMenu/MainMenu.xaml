<commonScene:SceneView x:Class="RECOVER.Assets.Scenes.MainMenu.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:commonScene="clr-namespace:RECOVER.Assets.Scenes.CommonScene"
      mc:Ignorable="d"
      Title="MainMenu">
    <commonScene:SceneView.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="{StaticResource MainMenuBackground}"></ImageBrush>
    </commonScene:SceneView.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Начать играть"/>
    </Grid>
</commonScene:SceneView>
