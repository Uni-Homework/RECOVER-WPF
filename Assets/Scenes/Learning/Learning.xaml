<cs:SceneView x:Class="RECOVER.Assets.Scenes.Learning.Learning"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:cs="clr-namespace:RECOVER.Assets.Scenes.CommonScene"
              xmlns:l="clr-namespace:RECOVER.Assets.Scenes.Learning"
              mc:Ignorable="d"
              Title="Learning"
              d:DataContext="{d:DesignInstance l:LearningScene, IsDesignTimeCreatable=True}">

    <cs:SceneView.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="{StaticResource MainMenuBackground}" />
    </cs:SceneView.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0"
               Grid.ColumnSpan="2" Source="{Binding SelectedItem.ImageSource}">
        </Image>
        <TextBox Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1"
                 IsReadOnly="True" Text="{Binding SelectedItem.Text}">
        </TextBox>
        <Button Grid.Row="2" Grid.Column="0" Content="Назад" Command="{Binding BackCommand}"></Button>
        <Button Grid.Row="2" Grid.Column="2" Content="Далее" Command="{Binding NextCommand}"></Button>
    </Grid>
</cs:SceneView>